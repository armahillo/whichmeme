<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Whichmeme" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Whichmeme" %>">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body id="<%= params[:controller] %>" class="<%= params[:action] %> <%= user_signed_in? ? 'signed_in' : '' %>">
    <header>
      <%= render 'layouts/navigation' %>
      <%= render 'layouts/user_data' if user_signed_in? %>
    </header>
    <main role="main">
      <%= render 'layouts/messages' %>
      <%= yield %>
      <br style="clear:both;" />
    </main>
  </body>
</html>
