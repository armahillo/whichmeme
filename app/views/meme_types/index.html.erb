<h1>Meme Templates</h1>

<div class="col-md-8">
<h3>Established Memes (more than 5 instances)</h3>
  <div class="established meme_types">
  <%- @established.each { |mt| %>
        <%= link_to image_tag(mt.template(:tiny)), meme_type_path(mt) %>
  <%- } %>
  </div>
</div>

<div class="col-md-4">
<h3>The Long Tail</h3>
  <div class="long-tail meme_types">
  <ul>
  <%- @long_tail.each { |mt| %>
       <li><%= link_to mt.name, meme_type_path(mt) %> (<%= mt.instance_count %>)</li>
  <%-  } %>
  </ul>
  </div>
</div>
